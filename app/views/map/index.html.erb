<div id="map" class="fill"></div>


<script src="http://maps.google.com/maps/api/js?v=3.13&sensor=false&libraries=geometry" type="text/javascript"></script>
<script src="http://google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js" type="text/javascript"></script>

<script type="text/javascript" language="javascript">
	handler = Gmaps.build('Google');
	handler.buildMap({ 
			internal: {id: 'map'},
			provider: { 
				zoom: 12,
				center: new google.maps.LatLng(51.511918, -0.127501) // leicester square
			}
		}, 
		function(){
	  		markers = handler.addMarkers([
	  			<% @places.each do |place| %>
		    		{
		      			"lat": <%= place.latitude %>,
		      			"lng": <%= place.longitude %>,
		      			"infowindow": "<div><strong><%= place.name %></strong></div><div class='grey'><em><%= place.place_type %></div></em><div>Rating: <%= place.rating %></div>"
	    			},
    			<% end %>
	  		]);


	 		handler.bounds.extendWith(markers);
		});
</script>
